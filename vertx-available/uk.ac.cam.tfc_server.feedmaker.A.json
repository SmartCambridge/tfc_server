                                         "file_suffix":   ".xml",
                                         "data_bin" :     "/media/tfc/cloudamber/sirivm/data_bin",
                                         "data_monitor" : "/media/tfc/cloudamber/sirivm/data_monitor"
                                       },
                                       { 
                                         "feed_id" :   "sirivm_json",
                                         "feed_type":  "feed_eventbus_msg",
