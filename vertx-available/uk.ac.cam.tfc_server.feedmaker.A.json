                                         "http.post":  true,

                                         "file_suffix":   ".json",
                                         "data_bin" :     "/media/tfc/sirivm_json/data_bin",
                                         "data_monitor" : "/media/tfc/sirivm_json/data_monitor",

                                         "msg_type" :  "feed_sirivm",
                                         "address" :   "tfc.feedmaker.cloudamber.sirivm"
                                       }
                                     ]
          }
        }
}
